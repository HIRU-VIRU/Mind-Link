{
  "manifest_version": 3,
  "name": "Mind-Link - AI-Powered Web Assistant",
  "version": "2.0.0",
  "description": "Chrome extension with built-in AI for summarization, definitions, ad blocking, and phishing detection.",
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules/basic-blocklist.json"
      },
      {
        "id": "ruleset_extended",
        "enabled": true,
        "path": "rules/extended-blocklist.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/api-bridge.js",
        "content/utils.js",
        "content/summaryPanel.js",
        "content/summarize.js",
        "content/dictionary.js",
        "content/cosmetic.js",
        "content/ads-learner.js",
        "content/phishing-detector.js",
        "content/jargon-simplifier.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/api.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}