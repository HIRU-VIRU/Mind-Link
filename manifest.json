{
  "manifest_version": 3,
  "name": "Double Click Logger",
  "version": "1.0.2",
  "description": "Logs double-click events and the selected word (if any) to the console.",
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules/basic-blocklist.json"
      },
      {
        "id": "ruleset_extended",
        "enabled": true,
        "path": "rules/extended-blocklist.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/utils.js",
        "content/api.js",
        "content/summaryPanel.js",
        "content/summarize.js",
        "content/dictionary.js",
        "content/cosmetic.js",
        "content/ads-learner.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
